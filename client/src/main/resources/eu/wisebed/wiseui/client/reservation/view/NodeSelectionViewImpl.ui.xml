<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:eu.wisebed.wiseui.widgets">

    <ui:style>
        .fullLayout {
            width: 100%;
            height: 100%;
        }

        .buttonPanel {
            width: 100%;
            background-color: #d0e4f6;
        }

		.content {
			padding: 7px;
		}
    </ui:style>

    <ui:with field='famfamfam' type="eu.wisebed.wiseui.widgets.famfamfam.FamFamFamResources"/>

    <g:DockLayoutPanel styleName="{style.fullLayout}">
        <g:center>
            <my:CaptionPanel caption="Node Selection" ui:field="container" styleName="{style.fullLayout}">
                <g:ScrollPanel styleName="{style.fullLayout}">
                    <g:SimplePanel styleName="{style.content}" ui:field="treeContainer"/>
                </g:ScrollPanel>
            </my:CaptionPanel>
        </g:center>
        <g:south size="35">
            <g:HTMLPanel styleName="{style.buttonPanel}">
                <!--g:Label>Button Panel</g:Label-->
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>