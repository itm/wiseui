<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.listBox {
			float: left;
			margin-top: 7px;
			width: 175px;
		}
	
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			margin-left: auto;
			margin-right: 0px;
			padding: 2px;
		}
		
		.button {
			width: 160px;
		}
		
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.contentTabBarContainer {
			border-top: 7px solid #d0e4f6;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{style.fullLayout}">
		<g:center>
			<g:SplitLayoutPanel>
				<g:center>
					<g:DeckPanel styleName="{style.fullLayout}" ui:field="contentDeckPanel"/>
				</g:center>
				<g:west size="250">
					<g:SimplePanel ui:field="configurationContainer" />
				</g:west>
			</g:SplitLayoutPanel>
		</g:center>
		<g:south size="35">
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<label style="float:left;margin: 8px 8px">Testbed View:</label>
				<g:ListBox styleName="{style.listBox}" ui:field="contentListBox"/>
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button ui:field="reloadButton" addStyleNames="{style.button}">Reload
								Network</g:Button>
						</td>
						<td>
							<g:Button ui:field="loginButton" addStyleNames="{style.button}">Connect
								to Testbed...
                            </g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 