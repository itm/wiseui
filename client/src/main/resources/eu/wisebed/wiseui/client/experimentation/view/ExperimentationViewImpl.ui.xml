<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:eu.wisebed.wiseui.widgets">


	<ui:style>
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			margin-left: 0px;
			margin-right: auto;
			padding: 2px;
		}
		
		.content {
			padding: 7px;
		}
	</ui:style>

	<ui:with field='famfamfam'
		type="eu.wisebed.wiseui.widgets.famfamfam.FamFamFamResources" />

	<my:CaptionPanel caption="Experiments" ui:field="container"
		styleName="{style.fullLayout}">
		<g:DockLayoutPanel styleName="{style.fullLayout}">
			<g:center>
				<g:VerticalPanel ui:field="experimentContainer"
					addStyleNames='{style.fullLayout} {style.content}'>
				</g:VerticalPanel>
			</g:center>
			<g:south size="35">
				<g:HTMLPanel styleName="{style.buttonPanel}">
					<table class="{style.buttonTable}">
						<tr>
							<td>
								<g:PushButton ui:field="refreshExperimentsButton" title="Refresh experiment list for selected testbed">
									<g:upFace image="{famfamfam.arrowRefresh}" />
								</g:PushButton>
							</td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:south>
		</g:DockLayoutPanel>
	</my:CaptionPanel>
</ui:UiBinder>