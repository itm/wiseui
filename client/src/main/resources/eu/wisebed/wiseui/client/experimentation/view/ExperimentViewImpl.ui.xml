<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.fullLayout {
			height: 100%;
			width: 100%;
		}
		
		.experimentPanel {
			height: auto;
			width: auto;
			border: 2px solid #d0e4f6;
		}
		
		.important {
			font-weight: bold;
		}
		
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			margin-left: 0px;
			margin-right: auto;
			padding: 2px;		
		}
	</ui:style>
	
	<g:DockLayoutPanel styleName="{style.fullLayout}">
		<g:center>
			<g:FlowPanel addStyleNames="{style.experimentPanel}">
				<g:HorizontalPanel>
					<g:Label text="Secret Reservation Key:" />
					<g:Label styleName="{style.important}" ui:field="secretReservationKey" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label text="Starts at :" />
					<g:Label styleName="{style.important}" ui:field="startDate" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label text="Stops at :" />
					<g:Label styleName="{style.important}" ui:field="stopDate" />
				</g:HorizontalPanel>
				<g:Label styleName="{style.important}" ui:field="experimentTiming" />
				<g:HorizontalPanel>
					<g:Label text="Status :" />
					<g:Label styleName="{style.important}" ui:field="status" />
				</g:HorizontalPanel>
			</g:FlowPanel>
		</g:center>
		<g:south size="35">
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button text="Foo"/>
						</td>
						<td>
							<g:Button text="bar"/>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>