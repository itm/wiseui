<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.fullLayout {
			height: 100%;
			width: 100%;
		}
		.experimentPanel {
			border: 2px solid lightblue;
			margin: 5px;
			padding: 1px;
		}
		
		.important {
			font-weight: bold;
		}
		
		.tabpanel {
			height: 200px;
			widgth: auto;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.fullLayout} {style.experimentPanel}">
		<g:HorizontalPanel>
			<g:Label text="Secret Reservation Key:"/>
			<g:Label styleName="{style.important}" ui:field="secretReservationKey"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Starts at :"/>
			<g:Label styleName="{style.important}" ui:field="startDate"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Stops at :"/>
			<g:Label styleName="{style.important}" ui:field="stopDate"/>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder>