<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
	xmlns:cl="urn:import:com.google.gwt.user.cellview.client" 
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:my="urn:import:eu.wisebed.wiseui.widgets">

	<ui:style>
		.reservationPanel{ width: 100%; height: 100%;}
		.parametersPanel{ width: 100%; padding:1px;}
		.actionsPanel{ background-color: #D0E4F6;}
		.reserveButtonContainer{ float:right; margin: 0 5px 0 0;}
		.allButtonContainer{ margin: 5px 0 0 5px;}
		.left{ float:left;}
		.bottomParametersPanel{ }
	</ui:style>

	<gwt:DockLayoutPanel styleName='{style.reservationPanel}'>
		<gwt:center>
			<gwt:SplitLayoutPanel>
				<gwt:center >
					<gwt:SimplePanel styleName='{style.parametersPanel}' ui:field="parametersPanel"/>
				</gwt:center>
				<gwt:west size="200">
					<gwt:SimplePanel ui:field="testbedsPanel"/>
				</gwt:west>
			</gwt:SplitLayoutPanel>
		</gwt:center>
		<gwt:south size="35">
			<gwt:HTMLPanel styleName='{style.actionsPanel}'>
				<gwt:HTMLPanel styleName='{style.allButtonContainer}'>
					<gwt:ToggleButton addStyleNames='{style.left}' ui:field="allReservationsButton">Public reservations</gwt:ToggleButton>
					<gwt:ToggleButton addStyleNames='{style.left}' ui:field="newReservationButton">New reservation</gwt:ToggleButton>
				</gwt:HTMLPanel>
				<gwt:HTMLPanel styleName='{style.reserveButtonContainer}'>
					<gwt:Button ui:field="reserveButton">Reserve</gwt:Button>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>
		</gwt:south>
	</gwt:DockLayoutPanel>
</ui:UiBinder>