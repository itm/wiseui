<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
        .fullLayout {
            width: 100%;
            height: 100%;
        }
	</ui:style>

	<g:SplitLayoutPanel styleName="{style.fullLayout}">
		<g:center>
			<g:SimplePanel  styleName="{style.fullLayout}" ui:field="nodeSelectionPanel" />
		</g:center>
        <g:east size="600">
            <g:SimplePanel  styleName="{style.fullLayout}" ui:field="reservationPanel" />
        </g:east>
	</g:SplitLayoutPanel>
</ui:UiBinder>