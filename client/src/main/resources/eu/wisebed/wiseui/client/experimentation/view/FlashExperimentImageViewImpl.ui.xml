<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:eu.wisebed.wiseui.client.experimentation.view"
	xmlns:w="urn:import:eu.wisebed.wiseui.widgets">

	<ui:style>
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			padding: 2px;
		}
		
		.innerPadding {
			padding: 7px;
		}
		
		.input {
			width: 400px;
		}
		
		.important {
			font-weight: bold;
		}
	</ui:style>
	<my:FlashExperimentImageViewImpl>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Label text="Available Images" styleName="{style.important}" />
					<g:Label text="1.ImageA" styleName="{style.input}" />
					<g:Label text="2.ImageB" styleName="{style.input}" />
					<g:Label text="3.ImageC" styleName="{style.input}" />
				</g:VerticalPanel>
				<g:VerticalPanel>
					<g:Label text="Upload New Image" styleName="{style.important}" />
					<g:Label text="upload an image" styleName="{style.input}" />
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button text="Flash Selected Image" ui:field="flashButton" />
						</td>
						<td>
							<g:Button text="Cancel" ui:field="cancelButton" />
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</my:FlashExperimentImageViewImpl>
</ui:UiBinder>