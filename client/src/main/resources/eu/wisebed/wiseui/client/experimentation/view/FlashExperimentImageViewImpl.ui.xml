<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:my="urn:import:eu.wisebed.wiseui.client.experimentation.view"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">


	<ui:style>
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			padding: 2px;
		}
		
		.innerPadding {
			padding: 7px;
		}
		
		.input {
			width: 400px;
		}
		
		.important {
			font-weight: bold;
		}
		
		.redimportant {
			font-weight: bold;
			color: red;
		}
		
		.cellTable {
			border-bottom: 1px solid #ccc;
			text-align: left;
			margin-bottom: 4px;
		}
	</ui:style>
	<my:FlashExperimentImageViewImpl>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Label text="Available Images" styleName="{style.important}" />
					<g:Label text= "There are no available images uploaded at the server" styleName="{style.redimportant}" ui:field="noImageUploaded"/>
					<g:HTMLPanel>
						<table cellspacing='0' cellpadding='0' styleName="{style.fullLayout}">
							<tr>
								<td valign='top'>
									<c:CellTable addStyleNames='{style.cellTable}'
										pageSize='10' ui:field='imageTable' />
								</td>
							</tr>
							<tr>
								<td align='center'>
									<c:SimplePager ui:field='pager' />
								</td>
							</tr>
						</table>
					</g:HTMLPanel>
				</g:VerticalPanel>
				<g:VerticalPanel>
					<g:Label text="Upload New Image" styleName="{style.important}" />
					<my:ImageUploadWidget ui:field="imageUploadWidget" />
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button text="Flash Selected Image" ui:field="flashButton" />
						</td>
						<td>
							<g:Button text="Cancel" ui:field="cancelButton" />
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</my:FlashExperimentImageViewImpl>
</ui:UiBinder>