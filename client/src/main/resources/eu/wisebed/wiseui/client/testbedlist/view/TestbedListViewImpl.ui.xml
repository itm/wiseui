<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:eu.wisebed.wiseui.widgets">
	
	<ui:style>		
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.buttonPanel {
            width: 100%;
            background-color: #d0e4f6;
        }

        .buttonTable {
            margin-left: auto;
            margin-right: 0px;
            padding: 2px;
        }
        
        .button {
        	width: 160px;
        }
	</ui:style>

	<my:CaptionPanel caption='Testbed Configurations'>
		<g:DockLayoutPanel styleName="{style.fullLayout}">
			<g:center>
				<g:ScrollPanel styleName="{style.fullLayout}">
					<c:CellList ui:field="configurationList" />
				</g:ScrollPanel>
			</g:center>
			<g:south size="35">
				<g:HTMLPanel styleName="{style.buttonPanel}">
	                <table class="{style.buttonTable}">
	                    <tr>
	                        <td>
	                            <g:Button ui:field="loginButton" addStyleNames="{style.button}">Connect to Testbed...</g:Button>
	                        </td>
	                    </tr>
	                </table>
	            </g:HTMLPanel>
			</g:south>
		</g:DockLayoutPanel>
	</my:CaptionPanel>
</ui:UiBinder> 