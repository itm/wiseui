<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		.caption {
			background: #e3e8f3 url(images/hborder.png) repeat-x 0px -2003px;
			padding: 4px 4px 4px 8px;
			cursor: default;
			border-bottom: 1px solid #bbbbbb;
		}
		
		.fullLayout {
			width: 100%;
			height: 100%;
		}
		
		.fullWidth {
			width: 100%;
		}
		
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			margin-left: auto;
			margin-right: 0px;
			padding: 2px;
		}
		
		.button {
			width: 160px;
		}
		
		.menu {
			border-left: 1px solid #bbbbbb;
			margin-top: -3px;
			margin-left: auto;
			margin-right: 8px;
			width: 50px;
		}
		
		.menu table {
			width: 100%;
		}
		
		.menu td {
			text-align: center;
		}
		
		.menu td:HOVER {
			background-color: #d0e4f6;
		}
		
		.label {
			float: left;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{style.fullLayout}">
		<g:north size="28">
			<g:HTMLPanel addStyleNames="{style.caption} {style.fullWidth}">
				<g:Label styleName="{style.label}">Testbed Configurations</g:Label>
				<g:MenuBar styleName="{style.menu}" animationEnabled="true" ui:field="menuBar"/>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel styleName="{style.fullLayout}">
				<c:CellList ui:field="configurationList" />
			</g:ScrollPanel>
		</g:center>
		<g:south size="35">
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button ui:field="loginButton" addStyleNames="{style.button}">Connect
								to Testbed...</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 