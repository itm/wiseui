<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:eu.wisebed.wiseui.client.reservation.view"
    xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.buttonPanel {
			width: 100%;
			background-color: #d0e4f6;
		}
		
		.buttonTable {
			margin-left: auto;
			margin-right: 0px;
			padding: 2px;
		}
		
		.button {
			width: 75px;
		}
		
		.topmargin {
			margin-top: 2px;
		}
		
		.innerPadding {
			padding: 7px;
		}
		
    	.prefix {
    		width: 320px !important;
    		margin-right: 5px;
    	}
		
    	.prefixlist {
    		width: 318px;
    		height: 150px;
    		border: 1px solid darkGray;
    	}
		
		.urnPrefixList {
			margin: 5px 0px;
			border: solid 2px #d0e4f6;
			width: 275px;
			height: 200px;
		}
		
		.input {
    		width: 400px;
    	}
	</ui:style>
	<my:ReservationEditViewImpl>
		<g:VerticalPanel>
			<g:HTMLPanel styleName="{style.innerPadding}">
				<label>Who:</label>
				<br />
				<g:TextBox addStyleNames="{style.input}" ui:field="whoTextBox" />
				<br />

				<label>Start:</label>
				<br />
				<d:DateBox addStyleNames="{style.input}" ui:field="startDateBox" />
				<br />

				<label>End:</label>
				<br />
				<d:DateBox addStyleNames="{style.input}" ui:field="endDateBox" />
				<br />

				<label>URN Prefixes:</label>
				<br />
				<table cellpadding="0" cellspacing="0">
					<tr>
						<td>
							<g:TextBox addStyleNames="{style.input} {style.prefix}" ui:field="urnPrefixTextBox" />
						</td>
						<td valign="top">
							<g:Button addStyleNames="{style.button} {style.topmargin}" ui:field="addButton">Add</g:Button>
						</td>
					</tr>
					<tr>
						<td>
							<g:ScrollPanel addStyleNames="{style.prefixlist}">
								<c:CellList ui:field="urnPrefixList" />
							</g:ScrollPanel>
						</td>
						<td valign="top">
							<g:Button addStyleNames="{style.button} {style.topmargin}" ui:field="removeButton">Remove</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<table class="{style.buttonTable}">
					<tr>
						<td>
							<g:Button ui:field="submitButton" addStyleNames="{style.button}">Submit</g:Button>
						</td>
						<td>
							<g:Button ui:field="cancelButton" addStyleNames="{style.button}">Cancel</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</my:ReservationEditViewImpl>
</ui:UiBinder> 