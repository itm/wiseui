<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.experimentPanel {
			border: 2px solid lightblue;
			margin: 5px;
			padding: 1px;
		}
		
		.important {
			font-weight: bold;
		}
		
		.tabpanel {
			height: 200px;
			widgth: auto;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.experimentPanel}">
		<g:HorizontalPanel>
			<g:Label text="Experiment id :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="reservationID"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Starts at :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="startDate"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Stops at :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="stopDate"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Current Status :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="status"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Experiment Image Filename :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="imageFilename"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Reservation time :"></g:Label>
			<g:Label addStyleNames="{style.important}" ui:field="reservationTime"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:FlexTable ui:field="buttonTable"></g:FlexTable>
		</g:HorizontalPanel>
		<g:TabLayoutPanel addStyleNames="{style.tabpanel}"
			barUnit='EM' barHeight='3' ui:field="nodeTabPanel">
		</g:TabLayoutPanel>
	</g:FlowPanel>
</ui:UiBinder>