<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" >
    <class name="eu.wisebed.wiseui.shared.AuthenticationDetails" table="USER">
        <id name="userid" column="user_id">
            <generator class="increment"/>
        </id>
        <property name="username"/>
		
		<!-- One user can have multiple secret authentication keys -->
		<set name="secretAuthenticationKeys" table="SECRET_AUTHENTICATION_KEY_TO_USER" cascade="save-update">
			<key column="user_id"/>
			<one-to-many class="eu.wisebed.wiseui.shared.wiseml.SecretAuthenticationKey"/>
		</set>
    </class>
</hibernate-mapping>
