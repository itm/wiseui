<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="eu.wisebed.wiseui.server.model.Image" table="IMAGE">
        <id name="imageid" column="image_id">
            <generator class="increment"/>
        </id>
        <property name="imageFileName"/>
        <property name="imageFileSize" not-null="true" />
        <property name="contentType" not-null="true" />
        <property name="content" not-null="true">
        	<column name="content" sql-type="MEDIUMBLOB" />
        </property>
    </class>
</hibernate-mapping>